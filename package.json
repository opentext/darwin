{
  "name": "darwin",
  "version": "0.0.1",
  "description": "Minimal CSS framework based on flexbox. By OpenText",
  "main": "dist/darwin.css",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "run-p build watch serve",
    "serve": "browser-sync start --no-notify -s test --ss dist -f dist",
    "clean": "rimraf dist",
    "build": "run-s clean sass autoprefixer",
    "sass": "run-s sass-expanded sass-min",
    "sass-expanded": "node-sass --output-style expanded src/darwin.scss dist/darwin.css",
    "sass-min": "node-sass --output-style compressed src/darwin.scss dist/darwin.min.css",
    "watch": "onchange src -- run-p build",
    "test": "npm run test",
    "autoprefixer": "postcss -u autoprefixer --no-map.inline --autoprefixer.browsers \"last 1 versions\" -r dist/*.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opentext/darwin.git"
  },
  "author": "Jason Ibrahim <jibrahim@opentext.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/opentext/darwin/issues"
  },
  "keywords": [
    "bootstrap",
    "css",
    "css3",
    "flexbox",
    "front-end",
    "framework",
    "html",
    "html5",
    "kickstarter",
    "less",
    "responsive",
    "mobile",
    "mobile-first",
    "postcss",
    "responsive",
    "sass",
    "scss",
    "stylus"
  ],
  "homepage": "https://github.com/opentext/darwin#readme",
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "browser-sync": "^2.23.6",
    "cpy-cli": "^1.0.1",
    "http-server": "^0.11.1",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "postcss-cli": "^4.1.1",
    "rimraf": "^2.6.2"
  }
}
